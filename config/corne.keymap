#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

#define LOWR 1
#define RAIS 2

/ {
        keymap {
                compatible = "zmk,keymap";

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  ESC |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | SHFT |     |     |     |     |     |   |  -  |  =  |  {  |  }  | "|" |  `   |
// | CTRL |     |     |     |     |     |   |  _  |  +  |  [  |  ]  |  \  |  ~   | // TODO: Fix this row when &mkp is committed
//                    | GUI |     | SPC |   | ENT |     | ALT |
   // &kp  ESC &kp LS(NUM_1)  &kp LS(NUM_2)  &kp HASH  &kp CURU  &kp PRCT    &kp CRRT  &kp AMPS &kp KMLT &kp LPRN &kp RPRN &kp BKSP
                        bindings = <
   &kp  ESC &kp LS(NUM_1)  &kp LS(NUM_2)  &kp LS(NUM_3)  &kp LS(NUM_4)  &kp LS(NUM_5)    &kp LS(NUM_6)  &kp LS(NUM_7) &kp LS(NUM_8) &kp LS(NUM_9) &kp LS(NUM_0) &kp BKSP
   &kp LSFT &trans    &trans    &trans    &trans    &trans      &kp MINUS &kp EQL  &kp LBKT &kp RBKT &kp LS(BSLH) &kp GRAV
   &kp LCTL &trans    &trans    &trans    &trans    &trans      &kp LS(MINUS)    &kp LS(EQL)   &kp LS(LBKT)   &kp LS(RBKT)   &kp BSLH &kp LS(GRAV)
                                      &trans &trans &trans   &trans &trans &trans
                        >;
                };

                default_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | SHFT |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | CTRL |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | SHFT |
//                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |
                        bindings = <
   &kp TAB  &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I    &kp O   &kp P    &kp BKSP
   &kp LSFT &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K    &kp L   &kp SCLN &kp QUOT
   &kp LCTL &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp CMMA &kp DOT &kp FSLH &kp RSFT
                   &kp LGUI &mo LOWR &kp RET   &kp SPC &mo RAIS &kp LALT
                        >;
                };

                lower_layer {
// -----------------------------------------------------------------------------------------
// |      |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | DEL  |
// |      |     |     |     |     |     |   | HME |  UP | END |     |     |      |
// |      | BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN | RGT |     |     |      |
//                    |     |     | BTC |   |     |     |     |
                        bindings = <
   &trans &kp NUM_1    &kp NUM_2    &kp NUM_3    &kp NUM_4    &kp NUM_5      &kp NUM_6 &kp NUM_7 &kp NUM_8 &kp NUM_9 &kp NUM_0 &kp DEL
   &trans &trans       &trans       &trans       &trans       &trans         &kp HOME  &kp UARW  &trans  &kp END  &trans    &trans
   &trans &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4      &kp LARW    &kp DARW    &kp RARW    &kp trans    &trans    &trans
                                      &trans &trans &bt BT_CLR &trans &trans &trans
                        >;
                };
        };
};